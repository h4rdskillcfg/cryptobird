        // Show leaderboard
        function showLeaderboard() {
            try {
                if (tg && tg.showAlert) {
                    tg.showAlert('üèÜ –¢–∞–±–ª–∏—Ü–∞ –ª–∏–¥–µ—Ä–æ–≤\n\n' +
                        `–í–∞—à –ª—É—á—à–∏–π —Å—á–µ—Ç: ${highScore}\n\n` +
                        '–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–æ–±–∏—Ç—å —Å–≤–æ–π —Ä–µ–∫–æ—Ä–¥! üöÄ');
                } else {
                    alert('üèÜ –¢–∞–±–ª–∏—Ü–∞ –ª–∏–¥–µ—Ä–æ–≤\n\n' +
                        `–í–∞—à –ª—É—á—à–∏–π —Å—á–µ—Ç: ${highScore}\n\n` +
                        '–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–æ–±–∏—Ç—å —Å–≤–æ–π —Ä–µ–∫–æ—Ä–¥! üöÄ');
